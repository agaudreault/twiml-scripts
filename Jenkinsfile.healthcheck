#!/usr/bin/groovy
@Library('jenkins-pipeline-library@release/3') _

// See https://pipeline-doc.devops.jive.com/latest/tests/health_check/

schedulePipeline {
  metadata = [
    slack: [
      channel     : "#pipeline-default",
      branchFilter: "master", //String or groovy regex pattern
