  ]
  schedule = '' // 'H/15 * * * *'
  args = [
    commonArgument: "This is an example of how to provide common configuration to the healthchecks."
  ]
  executions = [
    [scriptPath: 'script@healthcheck/healthcheck.groovy'],
  ]
}
